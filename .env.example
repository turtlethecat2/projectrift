# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project_rift
DB_USER=your_username
DB_PASSWORD=your_password
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/project_rift

# API Security - CHANGE THIS!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=REPLACE_WITH_RANDOM_32_CHAR_STRING

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
SOUND_VOLUME=0.7

# HUD Settings
HUD_REFRESH_INTERVAL=5
HUD_OPACITY=0.85

# dbt Settings
DBT_PROFILES_DIR=./dbt_project
DBT_TARGET=dev

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Optional: External Service Keys (if using)
OUTREACH_API_KEY=
NOOKS_API_KEY=
